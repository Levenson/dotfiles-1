###
# gmail specific options
###

color status blue default

set from      = "russell.sim@monash.edu"
set sendmail  = "/usr/bin/msmtp -a monash"
set mbox      = "+GMail/archive"
unset record
set postponed = "+GMail/drafts"

macro index E "<change-folder>+GMail/archive<enter><limit>~B " "search everything"
macro index D "<save-message>+GMail/bin<enter>"              "move message to the bin"
macro index S "<save-message>+GMail/spam<enter>"               "mark message as spam"

